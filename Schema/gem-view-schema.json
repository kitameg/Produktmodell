{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "View",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "layout": {
      "type": "string",
      "enum": [ "auto", "verticaltree", "horizontaltree", "verticalflow", "horizontalflow", "organic", "circle" ],
      "default": "horizontalflow"
    },
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/$defs/Node" }
    }
  },
  "$defs": {
    "Node": {
        "type": "object",
        "properties": {
          "name": {
            "anyOf": [
              { "$ref": "Produkttyp.schema.json" },
              { "type": "string" }
            ]
          },
          "connections": {
            "$ref": "#/$defs/Connections"
          }
        }
    },
    "MetaNode": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "connections": {
        "$ref": "#/$defs/Connections"
      }
},
    "Connections": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "Produkttyp.schema.json" },
          { "type": "string" }
        ]
      }
    }
  }
}