{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Schema for modeling the gematik products",
  "type": "object",
  "required": ["composition"],
  "properties": {
    "composition": {
      "$ref": "#/$defs/composition"
    }
  },
  "$defs": {
    "compositionTypes": {
      "anyOf": [
        {"$ref": "Produkttyp.schema.json"},
        { "enum": ["metaClientsNode", "metaProviderNode", "metaPlattformCentralNode"] }
      ]
    },
    "composition": {
      "type": "object",
      "required": [ "subjects" ],
      "properties": {
        "subjects": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [ "name" ],
            "properties": {
              "name": { 
                "type": "string",
                "$ref": "#/$defs/compositionTypes"
              },
              "connections": {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/compositionTypes"
                }
              }
            }
          }
        }
      }
    }
  }
}